{
  "manifest_version": 3,
  "name": "롤다방 Extension",
  "version": "1.0.0",
  "description": "롤다방 내전프로그램 Chrome Extension",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:4000/*",
    "https://loldabang-production.up.railway.app/*",
    "https://loldabang.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "롤다방 Extension"
  }
}
